<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <!--身份验证 -->
    <include layout="@layout/layout_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="243px"
        android:background="@drawable/item_selector_default"
        android:clickable="true"
        android:orientation="horizontal">

        <com.ruanyun.chezhiyi.commonlib.view.widget.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="190px"
            android:layout_height="190px"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/em_default_avatar"
            app:border_color="@color/transparent"
            app:border_width="0dp" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="37px"
            android:paddingTop="47px"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_xsmall" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="62px"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="62px"
            android:text="设置备注："
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_xsmall" />

        <EditText
            android:id="@+id/edit_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="62px"
            android:paddingRight="10dp"
            android:paddingTop="62px"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_xsmall" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="28px" />

    <EditText
        android:id="@+id/edit_info"
        style="@style/text_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="289px"
        android:background="@color/white"
        android:gravity="start"
        android:hint="填写你的附加信息"
        android:paddingBottom="10px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="35px" />

    <View style="@style/divider_horizontal" />

</LinearLayout>