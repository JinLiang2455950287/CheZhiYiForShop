<?xml version="1.0" encoding="utf-8"?>
<!--查看用户的资料-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include layout="@layout/layout_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/ease_technician_header" />

            <Button
                android:id="@+id/bt_add_friends"
                style="@style/button_default"
                android:layout_marginTop="60px"
                android:text="加好友"  />

            <Button
                android:id="@+id/bt_send_message"
                style="@style/button_default"
                android:layout_marginTop="60px"
                android:text="发消息"  />

            <Button
                android:id="@+id/btn_tel_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60px"
                android:layout_marginBottom="60px"
                android:background="@drawable/em_button_bg"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="一键拨号"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_middle"  />

            <TextView
                android:id="@+id/tv_set_blacklist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56px"
                android:gravity="center_horizontal"
                android:paddingBottom="30px"
                android:paddingTop="30px"
                android:text="设为黑名单"
                android:visibility="gone"
                android:textColor="@color/theme_color_default"
                android:textSize="@dimen/text_size_xsmall" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>