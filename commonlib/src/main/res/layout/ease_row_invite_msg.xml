<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_default"
    android:gravity="center_vertical"
    android:paddingLeft="25px"
    android:paddingRight="25px">

    <com.ruanyun.chezhiyi.commonlib.view.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="212px"
        android:layout_height="212px"
        android:layout_marginBottom="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="35px"
        android:src="@drawable/em_default_avatar"
        app:border_color="@color/transparent"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xmiddle" />

    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/avatar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/avatar"
        android:src="@drawable/em_msg_state_fail_resend"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35px"
        android:layout_alignBottom="@id/avatar"
        android:layout_toRightOf="@id/msg_state"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/agree"
        android:layout_width="170px"
        android:layout_height="90px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="27px"
        android:layout_toLeftOf="@+id/user_state"
        android:background="@drawable/button_selector_default"
        android:gravity="center"
        android:text="@string/agree"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />
</RelativeLayout>