<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150px"
    android:background="@color/white"
    android:id="@+id/fl_comment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View style="@style/divider_horizontal" />

    <com.ruanyun.chezhiyi.commonlib.view.widget.CommentEdittext
        android:id="@+id/edt_comment"
        android:layout_width="730px"
        android:layout_height="90px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:background="@drawable/shape_article_edittext_comment"
        android:hint="写评论..."
        android:imeOptions="actionSend"
        android:inputType="text"
        android:drawableLeft="@drawable/icon_comment"
        android:drawablePadding="15px"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:maxEms="50"
        android:paddingLeft="50px"
        android:textColorHint="@color/text_comment_gray" />

    <TextView
        android:id="@+id/btn_zan"
        android:layout_width="251px"
        android:layout_height="88px"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_article_btn_zan"
        android:drawableLeft="@drawable/selector_praised_status"
        android:drawablePadding="10px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:text="@string/zan_num"
        android:textColor="@drawable/selector_praised_textcolor"
        android:textSize="12sp" />
</FrameLayout>