<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" >

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="27px"
        android:paddingRight="27px"
        android:paddingTop="17px"
        android:paddingBottom="17px"
        android:text="2月10日" />

    <!--审核状态-->
    <TextView
        android:id="@+id/tv_check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_time"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:background="@drawable/shape_tg_bg"/>

    <TextView
        android:id="@+id/tv_praise"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/news_list_zan"
        android:drawablePadding="18px"
        android:paddingLeft="27px"
        android:paddingRight="27px"
        android:paddingTop="17px"
        android:paddingBottom="17px"
        android:text="222" />

</RelativeLayout>