<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cp_bg"
        android:text=""
        android:layout_marginBottom="43px"
        android:layout_marginTop="43px"
        android:layout_marginLeft="26px"
        android:textSize="10sp"
        android:textColor="@color/white"/>

    <!--<include layout="@layout/item_order_goods"/>-->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:layout_height="wrap_content"
        android:id="@+id/rl_goods_info"
        android:padding="13px" >

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="264px"
            android:layout_height="264px"
            android:layout_marginLeft="13px"
            android:layout_marginRight="36px"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/iv_goods_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:text=""/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/iv_goods_pic"
            android:layout_alignBottom="@id/iv_goods_pic"
            android:layout_marginBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:textColor="@color/text_gray"
            android:text=""/>

        <TextView
            android:id="@+id/tv_count_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_price"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/tv_price"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="2"
            android:text=""
            android:textSize="32px"
            android:textColor="@color/text_default" />
    </RelativeLayout>

</LinearLayout>