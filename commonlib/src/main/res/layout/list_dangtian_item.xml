<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_default"
    android:orientation="horizontal">


    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/theme_color_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_selector_default">

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true" />

        <com.ruanyun.chezhiyi.commonlib.view.widget.CircleImageView
            android:id="@+id/head_picCir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <View
            android:id="@+id/view_horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/head_picCir"
            android:background="@color/gray_border" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/view_horizontal"
            android:drawableLeft="@drawable/icon_usernum_black"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="张三"
            android:textColor="@color/app_black"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@drawable/shape_text_station_label_new"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="张三"
            android:textColor="@color/bg_tangerine"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/view_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="18：00拿车！"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_arrow_right" />

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>