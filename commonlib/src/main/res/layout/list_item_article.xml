<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_default"
    android:orientation="vertical">
    <!--文章资讯列表 item-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="524px">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/em_default_image" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_black"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="18px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:paddingTop="18px"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36px"
        android:paddingLeft="27px"
        android:paddingRight="27px"
        android:paddingTop="36px"
        android:text="新图管购车u"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_xsmall" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27px"
        android:layout_marginTop="6px">

        <TextView
            android:id="@+id/tv_article_type"
            style="@style/text_radius_style"
            android:background="@drawable/corner_rectangle_shape_bg"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:text="店内活动"
            android:textColor="@color/text_gray" />


        <TextView
            android:id="@+id/tv_create_time"
            style="@style/textView_alticle_item"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/find_news_time"
            android:paddingRight="27px"
            android:text="02/12 11:11 " />

        <TextView
            android:id="@+id/tv_thumbNum"
            style="@style/textView_alticle_item"
            android:layout_toLeftOf="@id/tv_create_time"
            android:drawableLeft="@drawable/news_list_zan"
            android:paddingRight="40px"
            android:text="111" />
    </RelativeLayout>

</LinearLayout>