<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320px"
    android:background="@drawable/item_selector_default"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_product_photo"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:background="@drawable/corner_rectangle_gray_border"
        android:padding="1px"
        android:scaleType="centerCrop"
        android:layout_marginRight="20px"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_black_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@+id/iv_product_photo"
        android:ellipsize="end"
        android:lines="1"
        android:text="主标题" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/iv_product_photo"
        android:ellipsize="end"
        android:lines="1"
        android:text="副标题"
        android:textColor="@color/text_comment_gray"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_photo"
        android:layout_toRightOf="@+id/iv_product_photo"
        android:text="¥0"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_sold_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_price"
        android:layout_marginLeft="42px"
        android:layout_toRightOf="@id/tv_price"
        android:text="已售0"
        android:textColor="@color/text_comment_gray"
        android:textSize="@dimen/text_size_small" />


    <TextView
        android:id="@+id/tv_purchase"
        style="@style/text_red_bg"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_marginRight="30px"
        android:layout_alignBottom="@+id/iv_product_photo"
        android:lines="1"
        android:text="立即抢购" />

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />

