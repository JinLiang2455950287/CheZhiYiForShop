<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_selector_default"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--案例库列表-->
    <TextView
        android:id="@+id/tv_case_context"
        style="@style/text_black_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="27px"
        android:paddingLeft="27px"
        android:paddingRight="27px"
        android:paddingTop="53px"
        android:text="简简介简介简介简介简介介" />

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_case_context"
        android:layout_marginLeft="27px"
        android:layout_marginRight="27px">

        <ImageView
            android:id="@+id/iv_case_left"
            android:layout_width="331px"
            android:layout_height="251px"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_case_center"
            android:layout_width="331px"
            android:layout_height="251px"
            android:layout_marginLeft="19px"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_case_right"
            android:layout_width="331px"
            android:layout_height="251px"
            android:layout_marginLeft="19px"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <include layout="@layout/layout_praise_common"/>

    <View style="@style/divider_horizontal" />
</LinearLayout>