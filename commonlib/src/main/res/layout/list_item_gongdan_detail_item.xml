<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_waiting_car_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/theme_color_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:text="皖A66666"
            android:textColor="#333"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/labelflow_service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_car_number"
            android:background="@drawable/corner_rectangle_orange_shape"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/bg_tangerine"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginLeft="42px"
            android:layout_marginTop="10px"
            android:drawableLeft="@drawable/icon_usernum_gray"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="张三"
            android:textColor="@color/text_booking_gray"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:drawableLeft="@drawable/gongdan_alarm2"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="2017-03-10 00:00"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_wait_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/gongdan_alarm1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="36分钟"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>


</LinearLayout>
