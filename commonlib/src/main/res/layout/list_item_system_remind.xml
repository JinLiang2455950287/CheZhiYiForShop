<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_default"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--系统消息item-->
        <cn.bingoogolapple.badgeview.BGABadgeImageView
            android:id="@+id/img_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="52px"
            android:padding="5dp" />

        <!--标题-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140px"
            android:layout_marginTop="52px"
            android:layout_toRightOf="@id/img_msg_type"
            android:singleLine="true"
            android:text="你有一个众筹失败了"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_middle" />

    </FrameLayout>

    <!--内容-->
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="140px"
        android:layout_marginRight="30px"
        android:text=""
        android:textColor="@color/text_gray" />

    <!--时间-->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30px"
        android:layout_marginBottom="30px"
        android:gravity="right"
        android:text=""
        android:textColor="@color/text_gray" />

    <View style="@style/divider_horizontal"/>
</LinearLayout>
