<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_time_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144px"
        android:orientation="vertical">

        <include layout="@layout/layout_record_title"/>

        <LinearLayout
            android:id="@+id/ll_operation_add_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="30px" >

            <!--结束施工-->
            <TextView
                android:id="@+id/tv_end_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/corner_rectangle_gray_shape"
                android:padding="25px"
                android:text="结束施工"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text_black"/>

            <!--添加助手-->
            <TextView
                android:id="@+id/tv_add_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/corner_rectangle_gray_shape"
                android:padding="25px"
                android:text="添加助手"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text_black"/>

            <!--代下单-->
            <TextView
                android:id="@+id/tv_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/corner_rectangle_grange_border"
                android:padding="25px"
                android:text="代下单"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="144px"
        android:layout_gravity="bottom"/>

</FrameLayout>