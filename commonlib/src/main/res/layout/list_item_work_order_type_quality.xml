<?xml version="1.0" encoding="utf-8"?>
<!--质检-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_time_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144px"
        android:orientation="vertical">

        <include layout="@layout/layout_record_title"/>

        <LinearLayout
            android:id="@+id/ll_operation_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_line_event"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="30px" >

            <!--拒绝-->
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/corner_rectangle_gray_shape"
                android:gravity="center"
                android:padding="25px"
                android:text="拒绝"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text_black"/>

            <!--质检通过-->
            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:background="@drawable/button_selector_default"
                android:padding="25px"
                android:text="质检通过"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_gravity="bottom"
        android:layout_marginLeft="144px"/>

</FrameLayout>