<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/theme_color_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/tv_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_below="@+id/tv_name"
                android:background="@drawable/gongdan_carnumber_selector"
                android:drawablePadding="10px"
                android:gravity="center_vertical"
                android:text="皖 AZE238"
                android:textColor="@color/bg_tangerine"
                android:textSize="@dimen/text_size_xsmall" />

            <!--<com.ruanyun.chezhiyi.commonlib.view.widget.LabelFlowLayout-->
            <TextView
                android:id="@+id/service_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_car_number"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_car_number"
                android:background="@drawable/gongdan_carnumber_selector"
                android:text="测试"
                android:textColor="@color/bg_tangerine" />


            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/tv_car_number"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/graw_gap_line" />

            <TextView
                android:id="@+id/tv_await_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:drawableLeft="@drawable/gongdan_alarm2"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="2017-03-10 09:12"
                android:textColor="@color/text_comment_gray"
                android:textSize="@dimen/text_size_xsmall" />


            <TextView
                android:id="@+id/tv_await_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/line"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="提成: ¥5.00"
                android:textColor="@color/text_comment_gray"
                android:textSize="@dimen/text_size_xsmall" />

        </RelativeLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true" />
    </LinearLayout>

</LinearLayout>
