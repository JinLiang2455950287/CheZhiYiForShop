<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_default"
    android:orientation="horizontal">

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/theme_color_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_selector_default">

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/li_pic"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.ruanyun.chezhiyi.commonlib.view.widget.CircleImageView
                android:id="@+id/head_picCir"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/tv_cartype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="car" />
        </LinearLayout>

        <View
            android:id="@+id/view_horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/li_pic"
            android:background="@color/gray_border" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/view_horizontal"
            android:drawableLeft="@drawable/icon_usernum_black"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_carNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/view_horizontal"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="皖 K99999"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_carNumber"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/view_horizontal"
            android:lines="1"
            android:text="上次保养时间: 2016-06-02"
            android:textColor="@color/gray_border"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_carNumber"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="最新历程: 15000km"
            android:textColor="@color/gray_border"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_tuisong"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/corner_rectangle_gray_shape"
            android:gravity="center"
            android:text="推送"
            android:textColor="@color/gray_border" />

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>