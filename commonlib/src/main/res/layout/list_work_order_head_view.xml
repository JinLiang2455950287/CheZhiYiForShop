<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--工单编号-->
    <TextView
        android:id="@+id/tv_work_order_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10px"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textSize="@dimen/text_size_middle"
        android:textColor="@color/text_black"
        android:text=""/>

    <!--服务项目-->
    <TextView
        android:id="@+id/tv_work_order_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textSize="@dimen/text_size_xsmall"
        android:textColor="@color/text_gray"
        android:text=""/>

    <!--服务工位  -->
    <TextView
        android:id="@+id/tv_work_order_work_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:text=""/>

    <!--服务技师  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_work_order_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="25px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_xsmall"
            android:text=""/>

        <TextView
            android:id="@+id/tv_work_order_body_leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:clickable="true"
            android:textColorLink="@color/theme_color_default"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_xsmall"
            android:text=""/>
    </LinearLayout>

    <!--服务客户-->
    <TextView
        android:id="@+id/tv_work_order_body_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:text=""/>

    <!--服务车辆-->
    <TextView
        android:id="@+id/tv_work_order_body_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:text=""/>

    <!--服务商品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_work_order_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="25px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone"
            android:text="服务商品："/>

        <!--服务商品-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_work_order_goods"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:id="@+id/tv_work_order_goods"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:maxLines="3"-->
            <!--android:paddingRight="25px"-->
            <!--android:paddingTop="5px"-->
            <!--android:paddingBottom="5px"-->
            <!--android:textColor="@color/text_gray"-->
            <!--android:text=""/>-->
    </LinearLayout>

    <!--已付定金-->
    <TextView
        android:id="@+id/tv_work_order_down_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="10px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:visibility="gone"
        android:text=""/>

    <!--工单总价-->
    <TextView
        android:id="@+id/tv_work_order_all_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="30px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:visibility="gone"
        android:text=""/>

    <!--客服备注 技师-->
    <TextView
        android:id="@+id/tv_work_order_remake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_xsmall"
        android:text=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:background="@color/bg_white"
        />
</LinearLayout>