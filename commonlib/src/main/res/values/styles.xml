<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <!-- 默认分割线 -->
    <style name="divider_horizontal">
        <item name="android:background">@color/color_gray_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
    </style>

    <!-- 垂直分割线-->
    <style name="divide_vertical">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_gray_line</item>
    </style>

    <!--普通字体样式-->
    <style name="text_default">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- 普通文本框的样式 -->
    <style name="edit_text_normal" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_hine</item>
    </style>

    <!-- 修改之后的文本框的样式 -->
    <style name="edit_text_normaled" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">170px</item>
        <item name="android:layout_marginRight">170px</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_hine</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--水平分割线  左右间距 170 px  -->
    <style name="divider_horizontal_style" parent="divider_horizontal">
        <item name="android:layout_marginRight">170px</item>
        <item name="android:layout_marginLeft">170px</item>
    </style>

    <!-- 密码输入框 -->
    <style name="edit_text_password" parent="edit_text_normaled">
        <item name="android:digits">@string/password_digits</item>
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">16</item>
    </style>

    <!-- 技师端的 登录名 -->
    <style name="edit_text_login_name" parent="edit_text_normaled">
        <item name="android:digits">@string/password_digits</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">16</item>
    </style>

    <!-- 手机号输入框 -->
    <style name="edit_text_phone" parent="edit_text_normaled">
        <item name="android:maxLength">11</item>
        <item name="android:numeric">integer</item>
        <item name="android:inputType">phone</item>
    </style>

    <!--button样式-->
    <style name="button_default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector_default</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!--修改后 button样式-->
    <style name="button_defaulted">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:layout_marginRight">170px</item>
        <item name="android:layout_marginLeft">170px</item>
    </style>

    <!--水平分割线， 左右有 20dp 间距-->
    <style name="divider_horizontal_padding" parent="divider_horizontal">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!--聊天设置 item样式-->
    <style name="textView_chat_set">
        <item name="android:background">@drawable/item_selector_default</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170px</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:paddingLeft">27px</item>
        <item name="android:paddingRight">27px</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="widthRatio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ll_contact_header_common">
        <item name="android:layout_height">150px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_contact_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginLeft">27px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">40px</item>
    </style>

    <!--textView底部样式-->
    <style name="bottom_layout_common">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">270px</item>
        <item name="android:drawablePadding">10px</item>
        <item name="android:paddingTop">23px</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@drawable/bottomlayout_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="textView_item_style" parent="widthRatio">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:paddingTop">55px</item>
        <item name="android:paddingBottom">55px</item>
        <item name="android:paddingRight">27px</item>
        <item name="android:paddingLeft">27px</item>
    </style>

    <style name="textView_alticle_item" parent="text_default">
        <item name="android:drawablePadding">18px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">40px</item>
        <item name="android:paddingTop">14px</item>
    </style>

    <style name="text_black_style">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!--产品列表 样式-->
    <style name="text_item_product">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">42px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_default</item>
    </style>

    <!--产品列表  按钮样式-->
    <style name="text_red_bg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">23px</item>
        <item name="android:paddingLeft">23px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/ease_button_selector_red</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!--汽车资讯 导航栏样式-->
    <style name="text_tab">
        <item name="android:textColor">@drawable/text_black_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">36px</item>
        <item name="android:paddingBottom">36px</item>
        <item name="android:paddingLeft">27px</item>
        <item name="android:paddingRight">40px</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <!--水平分割线  左右间距 27px 用于账户管理界面-->
    <style name="divider_horizontal_spacing" parent="divider_horizontal">
        <item name="android:layout_marginRight">27px</item>
        <item name="android:layout_marginLeft">27px</item>
    </style>

    <!--账户管理 textView样式-->
    <style name="textView_item_account_mangement" parent="widthRatio">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:paddingBottom">55px</item>
        <item name="android:paddingTop">55px</item>
        <item name="android:paddingLeft">27px</item>
        <item name="android:paddingRight">27px</item>
    </style>

    <!--退出 button按钮样式-->
    <style name="button_quit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_red_deep</item>
        <item name="android:layout_marginLeft">27px</item>
        <item name="android:layout_marginRight">27px</item>
        <item name="android:paddingTop">51px</item>
        <item name="android:paddingBottom">51px</item>
        <item name="android:background">@drawable/corner_rectangle_white_shape</item>
    </style>

    <!--提成item textview样式-->
    <style name="text_radius_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">7px</item>
        <item name="android:paddingBottom">7px</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
    </style>

    <!--自定义CheckBox-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/shop_check_box</item>
    </style>


    <!--在线报名 textView样式-->
    <style name="text_online_registration">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingBottom">55px</item>
        <item name="android:paddingTop">55px</item>
        <item name="android:paddingLeft">27px</item>
        <item name="android:paddingRight">27px</item>
    </style>

    <!--在线报名 editview样式-->
    <style name="edit_text_online_registration">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">27px</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--优惠券 头部样式-->
    <style name="tab_text_style">
        <item name="android:paddingBottom">60px</item>
        <item name="android:paddingTop">60px</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/text_bg_selector</item>
    </style>

    <style name="caselib_tabtext_style">
        <item name="android:textSize">16sp</item>
    </style>

    <!--预约详情 灰色字体-->
    <style name="text_booking_gray">
        <item name="android:layout_width">335px</item>
        <item name="android:layout_height">141px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">25px</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_booking_gray</item>
    </style>

    <!--我的预约Top选择text样式-->
    <style name="text_my_booking_top">
        <item name="android:layout_width">270px</item>
        <item name="android:layout_height">167px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/item_selector_default</item>
    </style>

    <!--我的爱车-->
    <style name="text_my_vehicle" parent="text_black_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">150px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">27px</item>
        <item name="android:paddingRight">27px</item>
    </style>

    <!--工位查看 等候区-->
    <style name="text_await_area">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">147px</item>
        <item name="android:layout_width">302px</item>
        <item name="android:paddingLeft">25px</item>
        <item name="android:textColor">@color/text_booking_gray</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="text_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:layout_marginLeft">27px</item>
        <item name="android:layout_marginRight">27px</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:layout_marginBottom">43px</item>
        <item name="android:background">@drawable/button_selector_default</item>
    </style>

    <!--时间选择器的样式-->
    <style name="time_picker_style" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--日期选择器的样式-->
    <style name="date_picker_style" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 默认垂直分割线 -->
    <style name="divider_vertical">
        <item name="android:background">@color/color_gray_line</item>
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomCheckboxGrayTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkboxselector</item>
    </style>
</resources>