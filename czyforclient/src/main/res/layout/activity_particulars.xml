<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				style="@style/activity_theme"
				android:background="@color/white">

	<include layout="@layout/layout_topbar"/>
	<TextView
		android:id="@+id/tv_particulars_time"
		android:layout_width="wrap_content"
		android:layout_height="135px"
		android:text="05月01日 15:22"
		android:gravity="center_vertical"
		android:paddingLeft="25px"
		android:textSize="43px"
		android:textColor="@color/text_gray"
		android:layout_below="@+id/topbar"/>
	<TextView
		android:id="@+id/tv_particulars_month"
		android:layout_width="wrap_content"
		android:layout_height="135px"
		android:text="-120.00"
		android:gravity="center_vertical"
		android:paddingRight="25px"
		android:textSize="43px"
		android:textColor="@color/text_gray"
		android:layout_below="@+id/topbar"
		android:layout_alignParentRight="true"/>
	<TextView
		android:id="@+id/tv_project_type"
		android:layout_width="wrap_content"
		android:layout_height="140px"
		android:text="【清洗】"
		android:gravity="top"
		android:paddingTop="15px"
		android:paddingLeft="6px"
		android:textSize="43px"
		android:textColor="@color/theme_color_default"
		android:layout_below="@+id/tv_particulars_time"/>
	<TextView
		android:id="@+id/tv_particulars_remarks"
		android:layout_width="match_parent"
		android:layout_height="140px"
		android:paddingRight="25px"
		android:text="值值值值值值值值值值值值值值值值值值值值"
		android:gravity="top"
		android:paddingTop="15px"
		android:textSize="43px"
		android:textColor="@color/text_black"
		android:layout_below="@+id/tv_particulars_time"
		android:layout_toRightOf="@+id/tv_project_type"/>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_particulars_photos"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:paddingLeft="25px"
		android:paddingRight="25px"
		android:layout_above="@+id/view"
		android:layout_below="@+id/tv_project_type"/>
	<View
		android:id="@+id/view"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/divider"
		android:layout_above="@+id/iv_delete"/>
	<ImageView
		android:id="@+id/iv_delete"
		android:layout_width="match_parent"
		android:layout_height="147px"
		android:layout_centerHorizontal="true"
		android:src="@drawable/icon_account_delete"
		android:scaleType="center"
		android:background="@drawable/item_selector_default"
		android:layout_alignParentBottom="true"/>
</RelativeLayout>
