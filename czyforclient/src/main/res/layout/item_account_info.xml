<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="210px"
	android:background="@drawable/item_selector_default">

	<TextView
		android:id="@+id/tv_account_disbursement_time"
		android:layout_width="wrap_content"
		android:layout_height="80px"
		android:text="05/03 12:34"
		android:textColor="@color/text_default"
		android:paddingLeft="25px"
		android:textSize="@dimen/text_size_xsmall"
		android:gravity="bottom"/>

	<TextView
		android:id="@+id/tv_account_book_type"
		android:layout_width="wrap_content"
		android:layout_height="130px"
		android:text="【美容】"
		android:textSize="@dimen/text_size_middle"
		android:paddingLeft="5px"
		android:gravity="center_vertical"
		android:layout_alignParentBottom="true"
		android:textColor="@color/theme_color_default"/>
	<TextView
		android:id="@+id/tv_account_remark"
		android:layout_width="530px"
		android:layout_height="125px"
		android:text="超值超值超值超值超超超值"
		android:gravity="center_vertical"
		android:paddingLeft="5px"
		android:ellipsize="end"
		android:lines="1"
		android:textColor="@color/text_black"
		android:textSize="@dimen/text_size_middle"
		android:layout_toRightOf="@+id/tv_account_book_type"
		android:layout_alignTop="@+id/tv_account_book_type"/>

	<ImageView
		android:id="@+id/iv_account_book_list_img"
		android:layout_width="56px"
		android:layout_height="42px"
		android:scaleType="fitXY"
		android:layout_toRightOf="@+id/tv_account_remark"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="45px"/>
	<TextView
		android:id="@+id/tv_account_bookPrice"
		android:layout_width="wrap_content"
		android:layout_height="125px"
		android:text="-780.00"
		android:gravity="center_vertical"
		android:paddingLeft="5px"
		android:paddingRight="25px"
		android:textColor="@color/text_default"
		android:textSize="@dimen/text_size_xsmall"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/tv_account_remark"/>
</RelativeLayout>
