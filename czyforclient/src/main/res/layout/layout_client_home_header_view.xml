<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="674px" >

    <ImageView
        android:id="@+id/iv_shop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/text_gray"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="266px"
        android:layout_height="266px"
        android:layout_marginLeft="58px"
        android:layout_marginTop="210px" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginLeft="127px"
        android:layout_toRightOf="@id/iv_logo"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xmiddle" />

    <TextView
        android:id="@+id/tv_is_support_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="40px"
        android:layout_toRightOf="@id/iv_logo"
        android:drawablePadding="24px"
        android:drawableLeft="@drawable/home_white_appointment"
        android:text="支持预约"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/tv_shop_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_logo"
        android:layout_alignLeft="@id/tv_title"
        android:layout_toRightOf="@id/iv_logo"
        android:drawablePadding="24px"
        android:drawableLeft="@drawable/home_white_hours"
        android:text="营销时间 8:00-9:00"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_middle" />

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="82px"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:orientation="horizontal">-->


    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_logo"
        android:layout_marginBottom="54px"
        android:layout_marginTop="65px"
        android:layout_marginRight="58px"
        android:background="@drawable/alpha_selector_default"
        android:paddingLeft="60px"
        android:paddingRight="40px"
        android:src="@drawable/home_white_phone" />

    <View
        android:id="@+id/view"
        style="@style/divide_vertical"
        android:layout_alignBottom="@id/iv_phone"
        android:layout_alignTop="@id/iv_phone"
        android:layout_toLeftOf="@id/iv_phone" />


    <TextView
        android:id="@+id/tv_location"
        android:layout_marginLeft="58px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/iv_logo"
        android:layout_marginBottom="54px"
        android:layout_marginTop="65px"
        android:layout_toLeftOf="@id/view"
        android:layout_weight="4"
        android:background="@drawable/alpha_selector_default"
        android:drawableLeft="@drawable/home_white_position"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="地址"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xsmall" />

    <!--</LinearLayout>-->
</RelativeLayout>