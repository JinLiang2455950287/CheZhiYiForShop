<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/white"
			  android:orientation="vertical">
	<!--我的预约item-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_order_number"
			style="@style/text_black_style"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingBottom="45px"
			android:paddingLeft="25px"
			android:paddingTop="45px"
			android:textColor="@color/black"
			android:text=""/>

		<TextView
			android:id="@+id/tv_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="45px"
			android:paddingLeft="27px"
			android:paddingRight="27px"
			android:paddingTop="45px"
			android:text="已取消"
			android:textColor="@color/theme_color_default"
			android:textSize="@dimen/text_size_xsmall"/>

	</LinearLayout>

	<View style="@style/divider_horizontal" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="248px"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0px"
			android:layout_weight="1"
			android:paddingLeft="40px"
			android:paddingRight="40px"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:text="预约服务项目"
				android:textColor="@color/text_booking_gray"
				android:gravity="bottom|center_horizontal"/>

			<TextView
				android:id="@+id/tv_booking_project"
				android:layout_width="match_parent"
				android:layout_height="147px"
				android:textSize="@dimen/text_size_xmiddle"
				android:textColor="@color/progressbar_bg_selected"
				android:gravity="center"
				android:singleLine="true"
				android:ellipsize="end"
				android:text=""/>
		</LinearLayout>

		<View
			android:layout_width="1px"
			android:layout_height="87px"
			android:layout_marginTop="87px"
			android:layout_marginBottom="74px"
			android:background="@color/text_comment_gray"/>

		<LinearLayout
			android:layout_width="0px"
			android:layout_weight="1"
			android:paddingLeft="40px"
			android:paddingRight="40px"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:text="预计到店时间"
				android:textColor="@color/text_booking_gray"
				android:gravity="bottom|center_horizontal"/>

			<TextView
				android:id="@+id/tv_arrive_time"
				android:layout_width="match_parent"
				android:layout_height="147px"
				android:textSize="@dimen/text_size_xmiddle"
				android:textColor="@color/progressbar_bg_selected"
				android:gravity="center"
				android:text=""/>
		</LinearLayout>
	</LinearLayout>
	<View style="@style/divider_horizontal" />
	<LinearLayout
		android:id="@+id/ll_money"
		android:layout_width="match_parent"
		android:layout_height="100px"
		android:paddingTop="20px"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/text_money"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textColor="@color/text_black"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:paddingLeft="25px"
			android:textSize="@dimen/text_size_xsmall"
			android:layout_weight="0"
			android:paddingRight="6px"
			android:text=""/>

		<TextView
			android:id="@+id/tv_money"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text=""
			android:textSize="@dimen/text_size_xmiddle"
			android:layout_toRightOf="@+id/text_money"
			android:textColor="@color/text_orange"
			android:gravity="center_vertical"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="147px"
		android:background="@color/white">

		<TextView
			android:id="@+id/tv_cancel_amount"
			android:layout_width="218px"
			android:layout_height="95px"
			android:layout_marginRight="25px"
			android:background="@drawable/corner_rectangle_gray_shape"
			android:gravity="center"
			android:layout_centerVertical="true"
			android:layout_alignWithParentIfMissing="true"
			android:textSize="@dimen/text_size_xsmall"
			android:layout_toLeftOf="@+id/tv_payment"
			android:textColor="@color/black"
			android:text=""/>

		<TextView
			android:id="@+id/tv_payment"
			style="@style/text_style"
			android:layout_width="218px"
			android:layout_height="95px"
			android:layout_marginLeft="8px"
			android:layout_marginRight="25px"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/corner_rectangle_grange_border"
			android:gravity="center"
			android:text=""/>

	</RelativeLayout>
	<View style="@style/divider_horizontal" />
	<View
		android:layout_width="match_parent"
		android:layout_height="25px"
		android:background="@color/bg_white"/>
</LinearLayout>