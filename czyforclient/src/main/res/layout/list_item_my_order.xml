<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <!--我的订单item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="55px"
            android:paddingLeft="27px"
            android:paddingTop="55px"
            android:text="订单编号：0909090"
            android:textColor="@color/text_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="55px"
            android:paddingLeft="27px"
            android:paddingRight="27px"
            android:paddingTop="55px"
            android:textColor="@color/theme_color_default"
            android:textSize="42px" />

    </LinearLayout>

    <!--<com.ruanyun.chezhiyi.commonlib.view.widget.MaxHeightListView-->
    <!--android:id="@+id/list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:divider="@null" />-->
    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="230px"
            android:layout_height="230px"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="27px"
            android:layout_marginTop="15px"
            android:src="@drawable/default_img" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:layout_marginRight="27px"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/tv_order_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="订单编号"
                android:textColor="@color/text_black"
                android:textSize="36px" />

            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="18px"
                    android:paddingLeft="10px"
                    android:paddingTop="10px"
                    android:textColor="@color/text_orange"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="18px"
                    android:paddingLeft="10px"
                    android:paddingTop="10px"
                    android:textColor="@color/text_default"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_count_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingBottom="18px"
                    android:paddingLeft="10px"
                    android:paddingTop="10px"
                    android:text="剩余数量：1"
                    android:textColor="@color/text_default"
                    android:textSize="32px" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_actual_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_actual_price"
            style="@style/widthRatio"
            android:gravity="center_vertical"
            android:paddingBottom="55px"
            android:paddingLeft="27px"
            android:paddingRight="27px"
            android:paddingTop="55px"
            android:textColor="@color/text_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tv_cancel_amount"
            android:layout_width="218px"
            android:layout_height="95px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="27px"
            android:background="@drawable/corner_rectangle_gray_shape"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/text_black"
            android:textSize="42px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="218px"
            android:layout_height="95px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:layout_marginRight="27px"
            android:background="@drawable/corner_rectangle_grange_border"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/text_white"
            android:textSize="42px"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="@color/bg_white" />

</LinearLayout>