<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_root"
    android:layout_width="906px"
    android:layout_height="644px"
    android:background="@color/text_black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="433px"
        android:background="@drawable/corner_rectangle_bg_white_shape"/>


    <LinearLayout
        android:layout_width="345px"
        android:layout_height="365px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@drawable/corner_rectangle_gray_shape_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_addcar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43px"
            android:src="@drawable/mycar_addnew"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43px"
            android:text="添加爱车实拍图"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_choose_carband"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="85px"
        android:text="点击选择车辆品牌款系(必填)"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="85px"
        android:layout_marginRight="40px"
        android:src="@drawable/mycar_sel_go"/>
</FrameLayout>