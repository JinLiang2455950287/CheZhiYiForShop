<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="home_type_item_style" parent="widthRatio">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">40px</item>
        <item name="android:background">@drawable/item_selector_default</item>
    </style>

    <!--我的界面info样式-->
    <style name="textView_my_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_my_info</item>
    </style>

    <style name="text_set_left">
        <item name="android:paddingLeft">44px</item>
        <item name="android:textSize">@dimen/text_set_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">37px</item>
    </style>
    <!--设置 textView-->
    <style name="text_set_right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/theme_color_default</item>
        <item name="android:textSize">@dimen/text_set_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">30px</item>
    </style>


    <!--评价页面  RatingBar样式-->
    <style name="RatingBarcom" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <!--<item name="android:layout_alignParentRight">true</item>-->
        <!--<item name="layout_centerVertical">true</item>-->
        <!--<item name="android:numStars">5</item>-->
        <!--<item name="android:stepSize">0.5</item>-->
    </style>


    <style name="roomRatingBarcom">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">112px</item>
        <item name="android:maxHeight">106px</item>
    </style>

    <style name="MyDialogStyleInput" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogTitle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--活动详情-->
    <style name="activity_detailed_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
