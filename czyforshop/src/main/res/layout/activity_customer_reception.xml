<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >

    <!--客户接待页面-->

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <include layout="@layout/layout_topbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:background="@drawable/btn_reject"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40px"
                android:text="皖A88888"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_middle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="640px"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/btn_reject"
                android:layout_width="700px"
                android:layout_height="116px"
                android:layout_marginLeft="30px">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:background="@null"
                    android:hint="输入车主手机号码"
                    android:inputType="phone"
                    android:textSize="@dimen/text_size_middle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116px"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30px"
                    android:text="客户信息"
                    android:textColor="@color/theme_color_default"
                    android:textSize="@dimen/text_size_middle" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:background="@drawable/btn_reject"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:hint="输入对技师的特别提醒"
                android:textSize="@dimen/text_size_middle"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:layout_marginTop="42px"
            android:text="客户预约信息"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425px"
            android:layout_marginTop="42px"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="260px"
                    android:layout_height="206px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="206px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="48px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="69px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="皖A88888"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_middle"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="69px"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="30px"
                                android:text="预计10:00到达"
                                android:textColor="@color/theme_color_default"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="69px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="软云Mr.Yun"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="69px"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            ></android.support.v7.widget.RecyclerView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:text="客户备注: 我想要他为我做汽车保养，点发货发货时发生非健康风格和解放军。"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:layout_height="120px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="选择服务商品"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69px"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="已购商品"
                    android:textColor="@color/theme_color_default"
                    android:textSize="@dimen/text_size_middle" />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="140px"
            android:background="@color/white"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="140px"
                android:background="@drawable/shape_blue_frame_linearlayout"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="添加服务商品"
                    android:textColor="@color/theme_color_default"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:textSize="@dimen/text_size_xmiddle"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_height="200px"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_green"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_xmiddle"
                android:text="生成工单"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>