<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_topbar" />

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="10px"
        android:paddingRight="20px"
        android:paddingLeft="20px"
        android:background="@drawable/corner_rectangle_gray_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请输入名称检索"
            android:background="@null"
            android:textSize="45px" />

        <ImageButton
            android:id="@+id/imb_search"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_search_normal" />

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="100px"-->
        <!--android:layout_marginTop="10px"-->
        <!--android:text="备注: 查询条件 手机号、姓名、车牌号"-->
        <!--android:textColor="@color/text_red" />-->

    <include layout="@layout/layout_refresh_list_base" />
</LinearLayout>
