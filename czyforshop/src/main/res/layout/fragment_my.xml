<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--android:layout_height="575px"-->
            <RelativeLayout
                android:id="@+id/rl_person_info"
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:background="@drawable/top_background">

                <com.ruanyun.chezhiyi.commonlib.view.widget.CircleImageView
                    android:id="@+id/iv_my_user_photo"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100px" />

                <!--用户名-->
                <TextView
                    android:id="@+id/tv_my_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="62px"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="80px"
                    android:layout_toRightOf="@+id/iv_my_user_photo"
                    android:drawablePadding="20px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="58px"
                    android:textStyle="bold" />

                <!--技师类型-->
                <com.ruanyun.chezhiyi.commonlib.view.widget.FlowLayout
                    android:id="@+id/flow_view"
                    android:layout_width="wrap_content"
                    android:layout_height="62px"
                    android:layout_alignLeft="@+id/tv_my_user_name"
                    android:layout_below="@+id/tv_my_user_name"
                    android:layout_marginTop="70px"
                    android:text="技师类型"
                    android:textColor="@color/white"
                    android:textSize="45px" />

                <!--工作状态-->
                <com.ruanyun.chezhiyi.commonlib.view.widget.FlowLayout
                    android:id="@+id/tv_my_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="100px"
                    android:layout_toRightOf="@+id/tv_my_user_name" />

            </RelativeLayout>
            <!--  android:textSize="42px"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color_default"
                android:orientation="horizontal"
                android:paddingBottom="15px"
                android:paddingTop="25px">

                <!--施工提成-->
                <TextView
                    android:id="@+id/tv_push_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:text="施工提成\n¥0.0"
                    android:textColor="@color/white"
                    android:textSize="36px" />

                <!--销售提成-->
                <TextView
                    android:id="@+id/tv_sales_commissions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:text="销售提成\n¥0.0"
                    android:textColor="@color/white"
                    android:textSize="36px" />

                <!--用户数-->
                <TextView
                    android:id="@+id/tv_user_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:text="用户数\n190"
                    android:textColor="@color/white"
                    android:textSize="36px" />
            </LinearLayout>

            <View style="@style/divider_horizontal" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
