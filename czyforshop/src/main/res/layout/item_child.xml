<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cb_service"
        style="@style/CustomCheckboxGrayTheme"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_child"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="item text" />

    <TextView
        android:id="@+id/tv_child_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/count_linearLayout"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="¥ 0"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/tv_child_detailtv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="¥ 0×0"
        android:textColor="@color/text_black" />

    <LinearLayout
        android:id="@+id/count_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbtn_sub"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/order_decrease_noral" />

        <TextView
            android:id="@+id/tv_child_detail_count"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_black" />


        <ImageButton
            android:id="@+id/imbtn_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/order_increase_noral" />
    </LinearLayout>

    <View
        android:id="@+id/view_shixian"
        style="@style/divider_horizontal2"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/view_xuxian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/xuxian_png"
        android:visibility="gone"/>


    <View
        android:layout_width="0.2dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@color/gray_border" />

    <View
        android:layout_width="0.2dp"
        android:layout_height="40dp"
        android:background="@color/gray_border" />

</RelativeLayout>