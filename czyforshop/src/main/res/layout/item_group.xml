<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_rectangle_gray_no_corner"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_group_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/mendian_repair"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="维修" />

        <TextView
            android:id="@+id/tv_group_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="技师：朱二哒 工位：综合01" />

        <TextView
            android:id="@+id/tv_group_pai"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/theme_color_default"
            android:gravity="center"
            android:text="派工"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>