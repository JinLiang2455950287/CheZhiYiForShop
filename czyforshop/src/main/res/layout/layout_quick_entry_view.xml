<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_quick_entry"
    android:layout_width="match_parent"
    android:layout_height="148px"
    android:layout_marginTop="26px"
    android:background="@drawable/item_selector_default"
    android:padding="30px"
    tools:showIn="@layout/fragment_home">

    <ImageView
        android:id="@+id/iv_quick_entry"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"/>

    <TextView
        android:id="@+id/tv_quick_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/iv_quick_entry"
        android:text="快捷入口"
        android:textColor="@color/headline_text_black"/>
</RelativeLayout>