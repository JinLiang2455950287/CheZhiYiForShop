<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_waiting_car_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/theme_color_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_border" />

        <TextView
            android:id="@+id/tv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:text="皖A66666"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle" />

        <com.ruanyun.chezhiyi.commonlib.view.widget.LabelFlowLayout
            android:id="@+id/labelflow_service_item"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/tv_car_number"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:layout_toRightOf="@+id/iv_car_photo"
            android:drawableLeft="@drawable/icon_usernum_black"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="软骨鱼ruanyun"
            android:textColor="@color/text_booking_gray"
            android:textSize="@dimen/text_size_xsmall" />


        <TextView
            android:id="@+id/tv_take_order"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:background="@drawable/corner_rectangle_gray_shape"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_small" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:background="@drawable/graw_gap_line" />

        <TextView
            android:id="@+id/tv_await_time_or_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:paddingRight="25px"
            android:text="已等候：3H"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_xsmall" />


        <TextView
            android:id="@+id/tv_await_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="42px"
            android:layout_toRightOf="@+id/tv_await_time_or_money"
            android:gravity="center_vertical"
            android:paddingRight="25px"
            android:text="应付金额"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_xsmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_border" />
    </RelativeLayout>


</LinearLayout>
