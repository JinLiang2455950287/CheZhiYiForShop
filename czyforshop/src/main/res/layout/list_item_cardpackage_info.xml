<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320px"
    android:background="@drawable/item_selector_default"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_product_photo"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="20px"
        android:layout_marginTop="30px"
        android:background="@drawable/corner_rectangle_gray_border"
        android:padding="1px"
        android:scaleType="centerCrop"
        android:src="@drawable/default_imge_middle" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_black_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@+id/iv_product_photo"
        android:ellipsize="end"
        android:lines="1"
        android:text="主标题" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_photo"
        android:layout_marginBottom="30px"
        android:layout_toRightOf="@+id/iv_product_photo"
        android:text="¥0"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:lines="1"
        android:text="5"
        android:textColor="@color/text_comment_gray" />

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />


</RelativeLayout>