<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--首页 提成 列表 item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            style="@style/widthRatio"
            android:layout_gravity="center_vertical"
            android:paddingLeft="27px"
            android:paddingRight="20px"
            android:text="2016年1月"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="28px"
            android:drawableRight="@drawable/em_right_arrow_icon"
            android:gravity="center_vertical"
            android:paddingRight="27px"
            android:text="¥ 11111"
            android:textColor="@color/text_orange_deep"
            android:textSize="@dimen/text_size_xsmall" />

    </LinearLayout>

    <View style="@style/divider_horizontal" />
</LinearLayout>