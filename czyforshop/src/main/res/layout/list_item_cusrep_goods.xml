<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="153px">

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/text_black"
        android:maxEms="15"
        android:ellipsize="end"
        android:layout_marginLeft="30px"
        />

    <TextView
        android:id="@+id/tv_overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="已过期"
        android:background="@color/bg_red_circle"
        android:padding="10px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="250px"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="160px"
        android:textColor="@color/text_black" />

    <ImageView
        android:id="@+id/img_sel_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="30px"
        android:layout_marginRight="50px"
        android:src="@drawable/item_selector_refund_application" />

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>