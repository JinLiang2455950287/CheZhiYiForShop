<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:orientation="vertical">

    <!--当天预约未到店item-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:src="@drawable/icon_usernum_hp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:text="皖A88888"
            android:textColor="@color/text_black"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30px"
                android:text="预计10:00到达"
                android:textColor="@color/theme_color_default"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <com.ruanyun.chezhiyi.commonlib.view.widget.FlowLayout
        android:id="@+id/labelflow_appointment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px" />


</LinearLayout>