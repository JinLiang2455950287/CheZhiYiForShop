<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_waiting_car_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/theme_color_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view2"
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_alignStart="@+id/tv_user_name"
            android:layout_below="@+id/view2"
            android:drawableLeft="@drawable/gongdian_repair"
            android:drawablePadding="10px"
            android:gravity="center_vertical"
            android:text="嘉实多机油"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginLeft="42px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/iv_car_photo"
            android:gravity="center_vertical"
            android:text="销量:30"
            android:textColor="@color/text_booking_gray"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/tv_await_time_or_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/tv_user_name"
            android:gravity="center_vertical"
            android:text="售价：¥112.0"
            android:textColor="@color/text_comment_gray"
            android:textSize="@dimen/text_size_small" />

        <!--<TextView-->
        <!--android:id="@+id/tv_take_order"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="20px"-->
        <!--android:background="@drawable/gray_arrow_right"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/text_comment_gray"-->
        <!--android:textSize="@dimen/text_size_small" />-->

        <View
            style="@style/divider_horizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</LinearLayout>
