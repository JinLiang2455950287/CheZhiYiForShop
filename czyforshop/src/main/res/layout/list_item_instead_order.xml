<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="230px"
        android:layout_height="230px"
        android:layout_marginBottom="27px"
        android:layout_marginLeft="27px"
        android:layout_marginRight="35px"
        android:layout_marginTop="27px"
        android:src="@drawable/default_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:layout_marginTop="27px"
        android:layout_toRightOf="@+id/iv_photo"
        android:paddingRight="27px">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12px"
            android:maxLines="2"
            android:text="普洗一次，普洗一次普洗，普洗一次，普洗一次"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="¥68"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_xmiddle" />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2px"
            android:layout_toRightOf="@+id/tv_money"
            android:text="x1"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/tv_total_money"
            android:text="总计:"
            android:textColor="@color/gray_border"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="¥68"
            android:textColor="@color/home_reback_brown"
            android:textSize="@dimen/text_size_xmiddle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_border" />
</RelativeLayout>
