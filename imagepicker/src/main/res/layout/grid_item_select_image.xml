<?xml version="1.0" encoding="utf-8"?>
<com.ruanyun.imagepicker.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="vertical">

	<ImageView
		android:id="@+id/ivPicker"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="center"/>

	<ImageButton
		android:id="@+id/ivbtnDelete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:padding="2dp"
		android:src="@drawable/icon_delete_photo"
		android:layout_alignParentRight="true"/>
</com.ruanyun.imagepicker.widget.SquareLayout>
